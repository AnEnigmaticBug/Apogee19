<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootPOV"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gd_blu01_blu02">

    <ImageView
        android:id="@+id/backgroundPatternIMG"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ll_background_pattern" />

    <ImageView
        android:id="@+id/apogeeLogoIMG"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="100dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_fest_logo" />

    <TextView
        android:id="@+id/festNameLBL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/google_sans_medium"
        android:text="Apogee 2019"
        android:textAllCaps="true"
        android:textColor="@color/wht01"
        android:textSize="33sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/apogeeLogoIMG" />

    <TextView
        android:id="@+id/tagLineLBL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/google_sans_medium"
        android:text="- The Reality Roulette -"
        android:textColor="@color/wht01"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/festNameLBL"
        app:layout_constraintStart_toStartOf="@+id/festNameLBL"
        app:layout_constraintTop_toBottomOf="@+id/festNameLBL" />

    <TextView
        android:id="@+id/loginAsBitsianBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/sh_rounded_rectangle_08dp"
        android:backgroundTint="@color/wht01"
        android:drawableEnd="@drawable/ic_google_logo"
        android:drawablePadding="8dp"
        android:fontFamily="@font/google_sans_medium"
        android:paddingStart="32dp"
        android:paddingTop="22dp"
        android:paddingEnd="32dp"
        android:paddingBottom="22dp"
        android:text="Login using BITS mail"
        android:textColor="@color/blu03"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/loginAsOutsteeBTN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/loginAsOutsteeBTN"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="46dp"
        android:background="@drawable/sh_rounded_rectangle_thin_outline_08dp"
        android:backgroundTint="@color/wht01"
        android:fontFamily="@font/google_sans_medium"
        android:paddingTop="22dp"
        android:paddingBottom="22dp"
        android:text="Outstation Participant"
        android:textAlignment="center"
        android:textColor="@color/wht01"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/loginAsBitsianBTN"
        app:layout_constraintStart_toStartOf="@+id/loginAsBitsianBTN" />

    <ProgressBar
        android:id="@+id/loaderPBR"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/wht01"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tagLineLBL" />

</androidx.constraintlayout.widget.ConstraintLayout>