<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootPOV"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/sh_rounded_rectangle_08dp"
    android:backgroundTint="@color/wht01"
    android:minWidth="300dp">

    <TextView
        android:id="@+id/nameLBL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:fontFamily="@font/google_sans_medium"
        android:lines="1"
        android:textAlignment="center"
        android:textColor="@color/blu03"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Outstee Special" />

    <TextView
        android:id="@+id/componentNamesLBL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameLBL"
        tools:text="(The Comedy, The Tragedy)" />

    <EditText
        android:id="@+id/quantityTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/sh_rounded_rectangle_08dp"
        android:backgroundTint="@color/gry03"
        android:ems="6"
        android:hint="No of Tickets"
        android:inputType="numberDecimal"
        android:lines="1"
        android:maxLength="6"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textAlignment="center"
        android:textColor="@color/blk01"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/priceLBL"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/componentNamesLBL" />

    <TextView
        android:id="@+id/priceLBL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/quantityTXT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/quantityTXT"
        app:layout_constraintTop_toTopOf="@+id/quantityTXT"
        tools:text="x 400 INR" />

    <TextView
        android:id="@+id/confirmBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/sh_rounded_rectangle_08dp"
        android:backgroundTint="@color/blu05"
        android:fontFamily="@font/google_sans_medium"
        android:paddingStart="42dp"
        android:paddingTop="14dp"
        android:paddingEnd="42dp"
        android:paddingBottom="14dp"
        android:text="Confirm"
        android:textColor="@color/wht01"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quantityTXT" />

</androidx.constraintlayout.widget.ConstraintLayout>